<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SBBackground"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@drawable/loginbackground"
        android:gravity="center"
        android:orientation="vertical" >

       

        <TextView
            android:id="@+id/lblSpotBilling"
            style="@style/SBLargeLabelWhite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="@string/SpotBilling" />

        <TextView
            android:id="@+id/lblSBBlinkText"
            style="@style/SBLargeLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <!--
             <TextView
            android:id="@+id/lblUsernameText"
            style="@style/SBSmallLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="@string/Username" />
        -->

        <EditText
            android:id="@+id/txtUserName"
            style="@style/SBTextBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:ems="20"
            android:hint="@string/Username"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <!--
             <TextView
            android:id="@+id/lblPasswordText"
            style="@style/SBSmallLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="@string/Password" />
        -->

        <EditText
            android:id="@+id/txtPassword"
            style="@style/SBTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:ems="20"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/SBButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="30sp"
            android:text="@string/Login" />

        <Button
            android:id="@+id/buttonsync"
            style="@style/SBButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Take Master Image" />

       

    </LinearLayout>

    <TextView
        android:id="@+id/lblPoweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/Nsoft"
        android:textStyle="bold" />

</LinearLayout>