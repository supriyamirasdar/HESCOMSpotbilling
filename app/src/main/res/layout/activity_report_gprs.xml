<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SBBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtGPRSReportMainHeading"
            style="@style/SBLargeLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/GPRSReport" />

        <ImageView
            android:id="@+id/imgRefresh"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:contentDescription="@string/GPRSReport"
            android:src="@drawable/refresh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainPrintDate"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PrintDate" />

        <TextView
            android:id="@+id/txtGPRSReportMainPrintDate"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainMRName"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MRName" />

        <TextView
            android:id="@+id/txtGPRSReportMainMRName"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainTotal"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/TotalInstallations" />

        <TextView
            android:id="@+id/txtGPRSReportMainTotal"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainBilled"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/Billed" />

        <TextView
            android:id="@+id/txtGPRSReportMainBilled"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainGPRSSent"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/GPRSSent" />

        <TextView
            android:id="@+id/txtGPRSReportMainGPRSSent"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainGPRSNotSent"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/GPRSNotSent" />

        <TextView
            android:id="@+id/txtGPRSReportMainGPRSNotSent"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainGPRSReceipts"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/Receipts" />

        <TextView
            android:id="@+id/txtGPRSReportMainGPRSReceipts"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainGPRSReceiptsGPRSSent"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/GPRSSent" />

        <TextView
            android:id="@+id/txtGPRSReportMainGPRSReceiptsGPRSSent"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainGPRSReceiptsGPRSNotSent"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/GPRSNotSent" />

        <TextView
            android:id="@+id/txtGPRSReportMainGPRSReceiptsGPRSNotSent"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainGPRSDisconnBilled"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Disconnection" />

        <TextView
            android:id="@+id/txtGPRSReportMainGPRSDisconnBilled"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainGPRSDisconnGPRSSent"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/GPRSSent" />

        <TextView
            android:id="@+id/txtGPRSReportMainGPRSDisconnGPRSSent"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblGPRSReportMainGPRSDisconnGPRSNotSent"
            style="@style/SBSmallLabel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/GPRSNotSent" />

        <TextView
            android:id="@+id/txtGPRSReportMainGPRSDisconnGPRSNotSent"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnGPRSReportMainGPRSStatus"
            style="@style/SBButton"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="@string/Print" />

        <Button
            android:id="@+id/btnGPRSReportMainBillsNotSent"
            style="@style/SBButton"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:text="@string/BillsNotSent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnGPRSReportMainReceiptsNotSent"
            style="@style/SBButton"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="@string/RptsNotSent" />

        <Button
            android:id="@+id/btnGPRSReportMainDisconnNotSent"
            style="@style/SBButton"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:text="Disconnection" />
    </LinearLayout>

</LinearLayout>