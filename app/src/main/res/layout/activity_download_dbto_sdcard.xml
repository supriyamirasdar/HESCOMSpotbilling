<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SBBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DownloadDBToSDCardActivity" >

    <Button
        android:id="@+id/btnDownloadMainDB"
        style="@style/SBButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="19dp"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@+id/btnDownloadBackUpDB"
        android:text="@string/DownloadMainDB" />

    <Button
        android:id="@+id/btnDownloadBackUpDB"
        style="@style/SBButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/btnDownloadMainDB"
        android:layout_alignBottom="@+id/btnDownloadMainDB"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:text="@string/DownloadBackUpDB" />

    <TextView
        android:id="@+id/lblDownloadDBStatus"
        style="@style/SBSmallLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDownloadMainDB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <ProgressBar
        android:id="@+id/pbDownloadDBStatusBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>