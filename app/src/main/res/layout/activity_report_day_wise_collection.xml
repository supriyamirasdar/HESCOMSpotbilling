<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/txtReportDayWiseCollection"
        style="@style/SBLargeLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/DayWiseCollectionReport" />

    <TextView
        android:id="@+id/lblReportDayWiseCollectionBatchNo"
        style="@style/SBSmallLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/BatchNo" />

    <TextView
        android:id="@+id/txtReportDayWiseCollectionBatchNo"
        style="@style/SBSmallLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/BatchNo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblReportDayWiseCollectionPrintDate"
            style="@style/SBSmallLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/PrintDate" />

        <TextView
            android:id="@+id/txtReportDayWiseCollectionPrintDate"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PrintDate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblReportDayWiseCollectionSubDiv"
            style="@style/SBSmallLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/SubDivision" />

        <TextView
            android:id="@+id/txtReportDayWiseCollectionSubDiv"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SubDivision" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblReportDayWiseCollectionDate"
            style="@style/SBSmallLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/RDate" />

        <TextView
            android:id="@+id/txtReportDayWiseCollectionDate"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblReportDayWiseCollectionMRCode"
            style="@style/SBSmallLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/MRCode" />

        <TextView
            android:id="@+id/txtReportDayWiseCollectionMRCode"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblReportDayWiseCollectionTotalReceipts"
            style="@style/SBSmallLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/Receipts" />

        <TextView
            android:id="@+id/txtReportDayWiseCollectionTotalReceipts"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtReceipts"
        style="@style/SBSmallLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Receipts" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblReportDayWiseCollectionPaidAmt"
            style="@style/SBSmallLabel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/CollAmount" />

        <TextView
            android:id="@+id/txtReportDayWiseCollectionPaidAmt"
            style="@style/SBSmallLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <TextView
            android:id="@+id/txtCollection"
            style="@style/SBSmallLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
             android:text="@string/CollAmount"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnReportDayWiseCollectionPrint"
            style="@style/SBButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="25dp"
            android:text="@string/Print" />

        <Button
            android:id="@+id/btnReportDayWiseCollectionDetails"
            style="@style/SBButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="@string/Details" />
    </LinearLayout>

</LinearLayout>