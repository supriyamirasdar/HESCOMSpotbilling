<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SBBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OtherBrowseActivity" >

    <EditText
        android:id="@+id/txtOtherBrowse"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:ems="30"
        android:inputType="none" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnOtherBrowse"
        style="@style/SBButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/txtOtherBrowse"
        android:layout_below="@+id/txtOtherBrowse"
        android:layout_marginTop="51dp"
        android:text="@string/Browse" />

    <Button
        android:id="@+id/btnOtherBrowseRead"
        style="@style/SBButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/btnOtherBrowse"
        android:layout_alignBottom="@+id/btnOtherBrowse"
        android:layout_alignRight="@+id/txtOtherBrowse"
        android:layout_marginRight="32dp"
        android:text="@string/Read" />

    <ProgressBar
        android:id="@+id/progressBarOtherBrowserFileLoad"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/txtOtherBrowse"
        android:layout_marginBottom="90dp" />

    <TextView
        android:id="@+id/lblProgressBarOtherBrowserStatus"
        style="@style/SBSmallLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBarOtherBrowserFileLoad"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>