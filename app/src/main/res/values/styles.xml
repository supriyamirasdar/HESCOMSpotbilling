<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Modified Nitish 24-08-2015 -->
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="MyTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyTheme.ActionBar.ActionBarText</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/blue1</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTheme.ActionBar.ActionBarText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style for Button. -->
    <style name="SBButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_btn2</item>
        <item name="android:padding">5dp</item>
        <item name="android:height">5dp</item>
    </style>

    <!--  -->
    <!-- Style for Small Label. -->
    <style name="SBSmallLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#005500</item>        
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

     <style name="SBSmallHelpLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#005500</item>        
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Style for Normal Label. -->
    <style name="SBLabel" parent="@android:style/TextAppearance">            
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style for Large Label. -->
    <style name="SBLargeLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#0000FF</item>        
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    
     <!-- Style for Large Label. -->
    <style name="SBLargeLabelWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>        
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Style for Red Label. -->
    <style name="SBRedLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF0000</item>       
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style for Spinner. -->
    <style name="SBSpinner">
        <item name="android:background">@color/blue1</item>
        <item name="android:popupBackground">@color/blue1</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#000000</item>       
    </style>

    <!-- Style for AutoComplete. -->
    <style name="SBAutoComplete">
        <item name="android:popupBackground">@color/blue1</item>   
        <item name="android:textColor">#000000</item>      
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/editview_style</item>
        <item name="android:padding">6dp</item>
    </style>

    <!-- Style for TextBox. -->
    <style name="SBTextBox">
        <item name="android:background">@drawable/editview_style</item>
        <item name="android:padding">8dp</item>       
    </style>

    <!-- Style for Toast. -->
    <style name="SBToast">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Backgronud. -->
    <style name="SBBackground">
        <item name="android:background">#FFFFFF</item>      
    </style>  

</resources>