<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true"><shape android:shape="rectangle">
         <solid android:color="#000000" />
         <corners android:bottomLeftRadius="20dp"
                  android:bottomRightRadius="20dp"
                  android:topLeftRadius="20dp"
                  android:topRightRadius="20dp"/>
         </shape>
         </item>
          <item android:state_enabled="false"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="18dp"
                  android:bottomRightRadius="18dp"
                  android:topLeftRadius="18dp"
                  android:topRightRadius="18dp" />

            <stroke android:width="1dp" android:color="#898989" />

            <gradient android:angle="270" android:endColor="#CCCCFF" android:startColor="#CCCCFF" />
        </shape></item>
     

        
    <item><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="18dp"
                  android:bottomRightRadius="18dp"
                  android:topLeftRadius="18dp"
                  android:topRightRadius="18dp" />

            <stroke android:width="1dp" android:color="#898989" />
 
           <!--  <gradient android:angle="270" android:endColor="#0D4D73"  android:startColor="#0D4D73"  /> -->
            <gradient android:angle="270" android:endColor="@color/blue1"  android:startColor="@color/blue1"  />
        </shape></item>

</selector>
